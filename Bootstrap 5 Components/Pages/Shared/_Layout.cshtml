<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bootstrap_5_Components</title>
    <meta name="description" content="@ViewData["Description"]" />
    <link href="~/css/index.css" rel="stylesheet" />
</head>
<body>
    <partial name="Bars/_bar_utility" />
    <header class="screen--header sticky-top shadow-b">
        <partial name="Bars/_bar_nav_top_offcanvas" />
    </header>
    <div id="hero">
        @RenderSection("hero", required: false)
    </div>
    <main role="main" class="pb-3">
        <partial name="Text/_title-description" />
            @RenderBody()
    </main>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Bootstrap_5_Components - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>
</html>